{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["github>home-operations/renovate-config"],
  customManagers: [
    {
      customType: "regex",
      description: ["Process Chart versions"],
      managerFilePatterns: ["/(^|/)metadata\\.ya?ml$/"],
      matchStrings: [
        "registry: (?<registryUrl>\\S+)\nname: (?<depName>\\S+)\nversion: (?<currentValue>\\S+)",
      ],
      datasourceTemplate: "helm",
    },
  ],
  packageRules: [
    {
      description: "Auto-merge Helm Charts",
      matchDatasources: ["helm"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["major", "minor", "patch"],
      ignoreTests: false,
    },
  ],
}
